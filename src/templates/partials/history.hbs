



<div class="order-info scale-with-window">

    <aside class="sorting">
        <div class="sorting__left">
            <select>
                <option>Все</option>
                <option>Исполняемые</option>
                <option>Выполненные</option>
            </select>
        </div>
        <div class="sorting__right">
            <div class="sorting__count">Заказов: <span class="sorting__count__value">2</span></div>
        </div>
    </aside>

    <div class="order-info__list">

        <div class="order-info__item">
            <div class="order-info__table">
