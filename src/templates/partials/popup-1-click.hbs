{{!--  попап заказ в 1 клик --}}
<aside class="popup popup-1-click" id="popup-1-click">
    <div class="popup__overlay">
        <div class="popup__loader">
            <div class="spinner"></div>
        </div>
    </div>
    <div class="popup__window">
        <div class="popup__content">
            <div class="page__center">
                <div class="popup__center">

                    <div class="popup__panel popup-1-click__panel">
                        <div class="popup__header">
                            Ваш заказ
                            <button type="button" class="popup__close js-popup-close">
                                <i class="icon-close"></i>
                            </button>
                        </div>
                        <div class="popup__body popup-1-click__body">

                            {{> goods-short }}

                            <form action="#" class="form-1-click">
                                <div class="form-1-click__item">
                                    <div class="input-label-up">
                                        <label class="input-label-up__label">Ваше имя</label>
                                        <input type="text" class="input-label-up__input">
                                    </div>
                                </div>

                                <div class="form-1-click__item">
                                    <div class="input-label-up">
                                        <label class="input-label-up__label">Ваш телефон</label>
                                        <input type="text" class="input-label-up__input" data-mask="+7(000)000-00-00" >
                                    </div>
                                </div>

                                <div class="form-1-click__item">
                                    <div class="input-label-up">
                                        <label class="input-label-up__label">Ваш email</label>
                                        <input type="text" class="input-label-up__input">
                                    </div>
                                </div>

                                <div class="form-1-click__item">
                                    <div class="input-label-up">
                                        <label class="input-label-up__label">Ваш комментарий</label>
                                        <textarea class="input-label-up__input"></textarea>
                                    </div>
                                </div>

                                <div class="form-1-click__agree">
                                    <label class="check-default">
                                        <input type="checkbox">
                                        <span>Я согласен с <a href="#" target="_blank">обработку персональных данных</a></span>
                                    </label>
                                </div>

                                <div class="form-1-click__apply">
                                    <button type="button" class="button button-green button--full">
                                        Сохранить
                                    </button>
                                </div>
                            </form>

                        </div>
                        <div class="popup__footer">
                            <span>Возникли проблемы? Посетите раздел <a href="#">Вопросы</a></span>
                        </div>
                        
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</aside>
{{!-- /попап заказ в 1 клик --}}