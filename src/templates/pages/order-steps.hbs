                            <div class="form-panel__item mt-0">
                                <div class="form-panel__label-lg">Выберите дату доставки</div>
                                <label class="form-panel__check form-panel__check--radio">
                                    <input type="radio" name="radio2" checked>
                                    <span>Сегодня</span>
                                </label>
                                <label class="form-panel__check form-panel__check--radio">
                                    <input type="radio" name="radio2">
                                    <span>Завтра</span>
                                </label>
                                <label class="form-panel__check form-panel__check--radio">
                                    <input type="radio" name="radio2">
                                    <span>Выбрать</span>
                                </label>
                            </div>
                            
                            <div class="form-panel__date">
