                            <div class="form-panel__title">Контактная информация</div>
                            <div class="form-panel__step">Шаг 1 / 4</div>
                        </div>
                        <div class="form-panel__body">
                            <div class="form-panel__item form-panel__item--col">
                                <label class="form-panel__label">Имя</label>
                                <input type="text" class="input input-default input--full" placeholder="Ваше имя">
                            </div>
                            
                            <div class="form-panel__item form-panel__item--col">
                                <label class="form-panel__label">Фамилия</label>
                                <input type="text" class="input input-default input--full" placeholder="Ваша фамилия">
                            </div>
                            
                            <div class="form-panel__item form-panel__item--col">
                                <label class="form-panel__label">Номер телефона</label>
                                <input type="text" class="input input-default input--full" placeholder="Ваш номер телефона">
                            </div>
                            
                            <div class="form-panel__item form-panel__item--col">
                                <label class="form-panel__label">E-mail</label>
                                <input type="text" class="input input-default input--full" placeholder="Ваш e-mail">
                            </div>
                            
                            <div class="form-panel__item">
                                <label class="form-panel__label">Адрес</label>
                                <input type="text" class="input input-default input--full" placeholder="Ваш адрес">
                            </div>
                        </div>

                    </div>
                    {{!-- /step 1 --}}

                    {{!--  step 2 --}}
                    <div class="form-panel">
                        <div class="form-panel__header">
                            <div class="form-panel__title">Выберите способ доставки</div>
                            <div class="form-panel__step">Шаг 2 / 4</div>
                        </div>
                        <div class="form-panel__body">

                            <div class="form-panel__item">
                                <label class="form-panel__check form-panel__check--radio">
                                    <input type="radio" name="radio1" checked>
                                    <span>Доставка</span>
                                </label>
                                <label class="form-panel__check form-panel__check--radio">
                                    <input type="radio" name="radio1">
                                    <span>Доставка на основе зон в Яндекс картах (Архангельск до 5 000 ₽ )</span>
                                </label>
                                <label class="form-panel__check form-panel__check--radio">
                                    <input type="radio" name="radio1">
                                    <span>Самовывоз</span>
                                </label>
                            </div>
                            
